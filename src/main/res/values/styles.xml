<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySettings</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSettings</item>
        <item name="colorAccent">@color/colorPrimarySettings</item>
    </style>

    <style name="Error" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/colorPrimaryLightError</item>
        <item name="colorPrimary">@color/colorPrimaryError</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkError</item>
        <item name="colorAccent">@color/colorPrimaryError</item>
    </style>

    <style name="SettingsButton" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/colorPrimaryLightSettings</item>
        <item name="colorPrimary">@color/colorPrimarySettings</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSettings</item>
        <item name="colorAccent">@color/colorPrimarySettings</item>
    </style>

    <style name="Button.Borderless.Colored" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
